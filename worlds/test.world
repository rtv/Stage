define sicklaser laser
(
  range_min 0.0
  range_max 8.0
  fov 180.0
  samples 180

  color "blue"
  size [ 0.14 0.14 ]	
)

# extend the pioneer2dx definition from pioneer.inc
#
define laserpioneer pioneer2dx
(
  sicklaser( 
    fiducialfinder( color "green" obstacle 0 )
  )

  blobfinder()
)


