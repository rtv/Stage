# the size of a pixel in Stage's underlying raytrace model in meters
resolution 0.02 

interval_sim 100  # milliseconds per update step
interval_real 100 # real-time milliseconds per update step

include "pioneer.inc"  # defines Pioneer-like robots
include "map.inc" # defines 'map' object used for floorplans

map(	
  size [15.5 11.4]
  origin [7.75 5.7 0]
  bitmap "bitmaps/autolab.png"
)

# extend the pioneer2dx definition from pioneer.inc
#
define laserpioneer pioneer2dx
(
  laser( 
    laser.range_min 0.0
    laser.range_max 8.0
    laser.fov 180.0
    laser.samples 180

    fiducialfinder()
  )
)


