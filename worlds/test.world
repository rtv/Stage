# simple.world - basic world file example
# Authors: Richard Vaughan
# $id$


# size of the world in meters
size [40 20 10]

# set the resolution of the underlying raytrace model in meters
resolution 0.02

interval_sim 100  # simulation timestep in milliseconds
interval_real 10  # real-time interval between simulation updates in milliseconds 

# configure the GUI window
window
( 
  size [ 1135.000 611.000 ] 
  center [30.990 0.960] 
  rotate [ 0.000 0.000 ]
  scale 21.103 
  #show_bboxes 0
  #show_grid 1

  show_data 2
  
  redraw_interval 50
)

include "map.inc"



include "pioneer.inc"



include "sick.inc"




paused 0

floorplan
( 
  size3 [40 20 0.6] 
  #bitmap "bitmaps/cave.png" 
  bitmap "bitmaps/hospital_section.png" 
)

define robot pioneer2dx
( 
  sicklaser( pose [0.050 0.000 0.000 0.000 ] )  
  fiducial_return 42
  fiducial( fov 45 )

  blobfinder()
)


