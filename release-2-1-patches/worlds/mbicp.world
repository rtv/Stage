# defines Pioneer-like robots
include "p3dx.inc"

# defines 'map' object used for floorplans
include "map.inc"

size [30 20]
resolution 0.02
gui_interval 20

# configure the GUI window
window
( 
  size [ 800 600.000 ] 
  center [0.0 0.0] 
  scale 0.04
)

map
( 
  bitmap "bitmaps/mbicp.png"
   size [28 10]
  name "pruebaScan"
)


# create a robot
pioneer3dx
(
  name "robot1"
  color "red"
  pose [8 0  180]
)
