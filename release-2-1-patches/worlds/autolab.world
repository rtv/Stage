# define and place some charging stations

define charger model
(
 size [ 0.5 0.5 ]

 color "green"
 #energy.capacity -1.0  # infinite
 #energy.return 30.0 # will transfer 30 Joules per second (Watts)
 #energy.range 0.0

 obstacle_return 0
 laser_return 0
 fiducial_key 1
)

charger( pose [ -4.522 -4.546 0.000 ] fiducial_return 1 )
