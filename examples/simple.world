set environment_file = simple.pnm
set pixels_per_meter =  100
set laser_res = 1

#set auth_key = foobar

# these servers enable clients (e.g. xs) access to Stage's internal models
enable truth_server
enable environment_server


create position_device pose 1.0 3.0 0.0 port 6665 
{
  create player_device size 0.05 0.05 pose -0.1 0.0 0.0 port 6665
  create sonar_device  port 6665
  create laser_device  pose 0.08 0.0 0.0 port 6665
  {
	create lbd_device port 6665	
  } 

  create ptz_device  pose 0.08 0.0 0.0 port 6665
  {
	create vision_device port 6665	
  } 
}

