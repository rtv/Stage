set environment_file = simple.pnm
set pixels_per_meter =  100
set laser_res = 1

#set auth_key = foobar

# these servers enable clients (e.g. xs) access to Stage's internal models
enable truth_server
enable environment_server


create position_device pose 1.00 3.00 0 color black channel -2 port 6665 index 0 invisible laser visible obstacle visible sonar shape rectangle 
{
  create player_device pose -0.10 0.00 0 color black channel -2 port 6665 index 0 invisible obstacle invisible laser invisible sonar 
  create sonar_device pose 0.00 0.00 0 color black channel -2 port 6665 index 0 invisible obstacle invisible laser invisible sonar 
  create laser_device pose 0.08 0.00 0 color black channel -2 port 6665 index 0 invisible obstacle invisible sonar visible laser 
  {
 create lbd_device pose 0.00 0.00 0 color black channel -2 port 6665 index 0 invisible obstacle invisible laser invisible sonar range 1.50 
  } 

  create ptz_device pose 0.08 0.00 0 color black channel -2 port 6665 index 0 invisible obstacle invisible laser invisible sonar 
  {
 create vision_device pose 0.00 0.00 0 color black channel -2 port 6665 index 0 invisible obstacle invisible laser invisible sonar 
  } 
}

